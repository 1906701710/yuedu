.container{
  background-color: #21272e;
  padding-bottom: 400rpx;
}
.nav-wrap{
  width: 680rpx;
  margin: 0 auto;
  text-align: center;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.nav-icon-menu-wrapper{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-right: 15rpx;
}
.main-wrapper{
  width: 680rpx;
  margin: 0 auto;
}
.book-photo-wrapper{
  width: 400rpx;
  height: 600rpx;
  display: block;
  margin: 0 auto;
  margin-top: 80rpx;
}
.book-name-wrapper{
  text-align: center;
  font-weight: 600;
  margin-top: 40rpx;
}
.author-wrapper{
  text-align: center;
  font-size: 27rpx;
  color: #5D637C;
  margin-top: 40rpx;
}
.reader-photo-wrapper{
  width: 400rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid #2f343c;
}
.reader-photo{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.reader-num-wrapper{
  width: 680rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 20rpx;
  color: #a2a8ba;
  margin-top: 20rpx;
}
.main-wrapper2{
  width: 680rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
.book-wra{
  margin-bottom: 40rpx;
} 
.book-photo-wra{
  width: 250rpx;
  height: 400rpx;
}
.book-name-wra{
  text-align: center;
  font-size: 27rpx;
  margin-top: 20rpx;
}